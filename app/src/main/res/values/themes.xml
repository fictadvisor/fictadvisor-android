<resources xmlns:tools="http://schemas.android.com/tools">
<!--     Base application theme.-->
    <style name="Base.Theme.Fictadvisorandroid" parent="Theme.Design.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/whiteFict</item>
        <item name="colorSecondary">@color/whiteFict</item>
        <item name="colorSecondaryVariant">@color/whiteFict</item>
        <item name="colorOnSecondary">@color/red</item>
        <item name="colorSurface">@color/whiteFict</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorError">@color/redError</item>
        <item name="colorOnError">@color/whiteFict</item>

    </style>

    <style name="Theme.Fictadvisorandroid" parent="Base.Theme.Fictadvisorandroid" />


    <style name="ButtonStyle_Red" >
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textColor">@color/whiteFict</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:gravity"> center</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle_Red_Small" >
        <item name="android:background">@drawable/button_red</item>
        <item name="android:textColor">@color/whiteFict</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:gravity"> center</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle_Transparent" >
        <item name="android:background">@drawable/button_transparent</item>
        <item name="android:textColor">@color/whiteFict</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:gravity"> center</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditText_Transparent" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="android:fontFamily">@font/manrope</item>
        <item name="android:textSize">16sp</item>
        <item name="android:maxLength">40</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="hintTextColor">@color/whiteFict</item>
        <item name="boxStrokeColor">@color/edit_text_transparent</item>
        <item name="boxBackgroundColor">@color/blackFict</item>
        <item name="cursorColor">@color/whiteFict</item>

        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/redError</item>
        <item name="errorTextColor">@color/redError</item>
        <item name="cursorErrorColor">@color/redError</item>
        <item name="errorIconTint">@color/redError</item>
    </style>

    <style name="EditText_Transparent_Password" parent="EditText_Transparent">
        <item name="android:inputType">textPassword</item>
        <item name="passwordToggleEnabled">true</item>
        <item name="passwordToggleTint">@color/edit_text_transparent</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="EditText_Transparent_AutoComplete" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <item name="hintTextColor">@color/whiteFict</item>
        <item name="boxStrokeColor">@color/edit_text_transparent</item>
        <item name="boxBackgroundColor">@color/blackFict</item>
        <item name="cursorColor">@color/whiteFict</item>
        <item name="errorEnabled">true</item>
        <item name="boxStrokeErrorColor">@color/redError</item>
        <item name="errorTextColor">@color/redError</item>
        <item name="cursorErrorColor">@color/redError</item>
        <item name="errorIconTint">@color/redError</item>
    </style>

    <style name="ButtonStyle_Transparent_Gray" >
        <item name="android:background">@drawable/button_transparent_gray</item>
        <item name="android:textColor">@color/whiteFict</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">32dp</item>
        <item name="android:paddingEnd">32dp</item>
        <item name="android:gravity"> center</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonStyle_Gray" >
        <item name="android:background">@drawable/button_gray</item>
        <item name="android:textColor">@color/whiteFict</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingStart">42dp</item>
        <item name="android:paddingEnd">42dp</item>
        <item name="android:gravity"> center</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>